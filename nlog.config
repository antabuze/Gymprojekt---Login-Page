<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target name="Error" xsi:type="File"
            fileName="c:\Logs\Grupp 3\Error-${shortdate}.log"
            layout="
            ${longdate}
            ${message}
            ${onexception:EXCEPTION OCCURRED\:
            ${exception:format=type,message,method:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}}
            ${newline}"/>

    <target name="Info" xsi:type="File"
            fileName="c:\Logs\Grupp 3\Info-${shortdate}.log"
            layout="
            ${longdate}
            ${message}"/>
    </targets>
  

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Error" writeTo="Error" />
    <logger name="*" minlevel="Info" writeTo="Info" />
  </rules>
</nlog>