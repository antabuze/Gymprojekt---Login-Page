@model IEnumerable<SysAdminLogin.Models.UserCheckin>

@{
    ViewData["Title"] = "Index";
}

<h1>Stämplingar</h1>
<p>
    <a asp-action="Create" class="Createlink">Lägg till</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Användare
                </th>
                <th>
                    Instämplingstid
                </th>
                <th>
                    Utstämplingstid
                </th>
                <th>
                    Åtgärder
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>

                        <a href="@Url.Action("Create", "UserCheckin", new { id = item.Id})">
                            <img class="icon" src="https://img.icons8.com/color/48/000000/edit--v1.png" />
                        </a>
                        <a href="@Url.Action("Delete", "UserCheckin", new { id = item.Id})">
                            <img class="icon" src="https://img.icons8.com/color/48/000000/delete-sign--v1.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="button" value="Tillbaka till meny" onclick="window.location='@Url.Action("Index", "Home")'" class="Createlink" />
